---
import { getCollection } from "astro:content";
import PageLayout from "@/layouts/Base";
import PostPreview from "@/components/blog/PostPreview";
import SocialList from "@/components/SocialList";
import { sortMDByDate } from "@/utils";

const MAX_POSTS = 10;
const allPosts = await getCollection("post");
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS);
---

<PageLayout meta={{ title: "Home" }}>
	<section>
		<!-- <h1 class="title mb-6">Hey It's Adu</h1> -->
		<p class="mb-4">
			Hi I'm <strong>Muhammad</strong> aka <strong>Adu</strong>. I'm a <strong>self-taught</strong> fullstack
			engineer. I code mostly in javaScript, but i strongly believe in choosing the right tool for the
			job thats what i do in my projects. I love building things, challenging myself, trying new languages
			and tools,
		</p>
		<p>
			Currently contributing to open source projects, filling the gaps in my cs fundamentals thats
			my data structures and algorithms, building some awesome side projects, writing blogs about my
			experience, <strong>applying to internships and jobs</strong>, hanging out on discord, meeting
			amazing developers from all over the world and i love it.
		</p>
		<SocialList />
	</section>

	<section class="mt-8">
		<h2 class="title mb-4 text-xl">Projects</h2>
		<ul class="space-y-4 sm:space-y-2">
			<li>
				<a
					href="https://github.com/adumansr/personal_blog"
					target="_blank"
					rel="noopener noreferrer"
					class="cactus-link inline-block"
					>Personal Blog
				</a>:
				<p class="inline-block sm:mt-2">
					A simple website built with Astro to document and share my journey.
				</p>
			</li>
		</ul>
	</section>
	<section aria-label="Blog post list" class="mt-8">
		<h2 class="title mb-4 text-xl">Blog</h2>
		<ul class="space-y-4 sm:space-y-2">
			{
				allPostsByDate.map((p) => (
					<li class="flex flex-col gap-x-2 sm:flex-row">
						<PostPreview post={p} />
					</li>
				))
			}
		</ul>
	</section>
</PageLayout>
